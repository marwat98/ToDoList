<section>
    <div class="container">
        <div class="todolist">
            <h2>Shopp-list</h2>
            <img src="src/images/list.png">
        </div>
        <div class="toDoList_action">
            <form id="addToDataBase">
                    <table class="list_inputs">
                        <th>Nazwa produktu</th>
                        <th>Rodzaj</th>
                        <th>Ilość</th>
                        <tr>
                            <td><input class="addText" type="text" id="note" name="note" placeholder="Dodaj tekst" required></td>
                            <td>
                                <select id="categories" name="categories">
                                    <option value="bread">Pieczywo</option>
                                    <option value="fruits">Owoce</option>
                                    <option value="vegetables">Warzywa</option>
                                    <option value="sweats">Słodycze</option>
                                    <option value="drinks">Napoje</option>
                                    <option value="meat">Mięso</option>
                                    <option value="dairy">Produkty mleczne</option>
                                    <option value="cleaning">Środki czystości</option>
                                </select> 
                            </td>
                            <td><input class="addNumber" type="text" placeholder="Ilość sztuk" required></td>
                        </tr>
                    </table>
                <button type="submit" name="press" value="addNote" id="add" class="add" onclick="addDeleteNoteAjax(event,'addToDataBase');">Dodaj</button>
            </form>
        </div>
    </div>
        <div class="display">
            <ul id="list-container">
                {% for row in data %}
                <table class="table_display">
                    <tr>
                        <td class="show_id">{{ row.id }}</td>
                        <td><li>{{ row.note }}</li></td>
                        <form id="deleteWithDataBase">
                            <input type="hidden" name="id" value="{{ row.id }}">
                            <td><button type="submit" id="delete" name="press" value="deleteNote" class="delete" onclick="addDeleteNoteAjax(event,'deleteWithDataBase');">&times;</button></td>
                        </form>
                    </tr>
                    {% else %}
                    <td>Brak notatek</td>
                </table>
                {% endfor %}
            </ul>
        </div>
</section>
<script src="src/js/script.js"></script>